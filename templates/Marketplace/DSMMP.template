                                "source": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            {
                                                "Ref": "CfnUrlPrefix"
                                            },
                                            "Common/Scripts/kill-mp-web-installer.sh"
                                        ]
                                    ]
                                },
                                "owner": "root",
                                "mode": "000700"
                            },
                            "/etc/cfn/add-aws-account-with-instance-role.sh": {
                                "source": {
                                    "Fn::Join": [
                                        "",
                                        [
                                            {
