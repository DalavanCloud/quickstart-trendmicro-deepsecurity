            ]
        },
        "IsFirstNodePlusELB": {
            "Fn::And": [
                {
                    "Condition": "IsFirstNode"
                },
                {
                    "Condition": "AddToELB"
                }
            ]
        },
        "AddAcAnswer": {
            "Fn::And": [
                {
                    "Condition": "KeyProvided"
                },
                {
                    "Condition": "PPUNotSelected"
                }
            ]
        },
        "InternetFacingELB": {
            "Fn::Equals": [
                {
                    "Ref": "DSELBPosture"
                },
                "External"
